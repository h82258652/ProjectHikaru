<UserControl x:Class="HikaruWeb.Blink"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:HikaruWeb">
    <Grid x:Name="LayoutRoot">
        <Image Source="ms-appx:/Images/speak1.png"
               Stretch="Fill" />
        <Image x:Name="imgBlink"
               Margin="32,42,33,95"
               Source="ms-appx:/Images/blink.png"
               Stretch="Fill"
               Visibility="Collapsed" />
        <Image x:Name="imgSmile"
               Height="23"
               Margin="67,0,70,76"
               Source="ms-appx:/Images/smile.png"
               Stretch="Fill"
               VerticalAlignment="Bottom">
            <Image.RenderTransform>
                <RotateTransform CenterX="0.5"
                                 CenterY="0.5"
                                 Angle="8.451" />
            </Image.RenderTransform>
        </Image>
    </Grid>
</UserControl>